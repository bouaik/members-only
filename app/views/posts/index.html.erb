<h1 class="text-center">Posts</h1>

<% @posts.each do |post| %>
  <div class="card">
    <div class="card-header">
      <%= post.title %>
    </div>
    <div class="card-body">
      <p class="card-text"><%= post.body %></p>
      <p class="card-text">
          <% if current_user %>
            <p><strong>Created by : </strong><%= post.user.email.split("@")[0] %></p>
          <% end%>
      </p>
        <%= link_to 'Show', post, class: "btn btn-primary" %>
        <% if current_user == post.user%>
        <%= link_to 'Edit', edit_post_path(post), class: "btn btn-success" %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        <% end %>
    </div>
  </div>
<% end %>

<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-primary" %>
